{
  "$schema": "http://json-schema.org/schema",
  "id": "https://github.com/spitfjre/ng-swagger-gen-cli/blob/master/ng-openapi-gen-cli-schema.json",
  "title": "Options for ng-openapi-gen-cli",
  "type": "object",
  "required": ["configurations"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "configurations": {
      "type": "array",
      "required": ["defaultLocalUrl", "defaultUrl", "name", "openapiGen"],
      "properties": {
        "defaultLocalUrl": {
          "description": "The default local URL of the openapi descriptor in JSON format.",
          "type": "string"
        },
        "defaultUrl": {
          "description": "The default URL of the openapi descriptor in JSON format.",
          "type": "string"
        },
        "name": {
          "description": "The name of the configuration.",
          "type": "string"
        },
        "openapiGen": {
          "description": "The location of the ng-openapi-gen file.",
          "type": "string"
        }
      }
    }
  }
}
